<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <!-- Override LOG PATTERN from defaults.xml -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
<!--     <include resource="org/springframework/boot/logging/logback/console-appender.xml"/> -->
<!--  console appender 覆盖，去掉了charset，解决tomcat控制台乱码问题"/> -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${CONSOLE_LOG_PATTERN}</pattern>
			<charset>utf8</charset>
		</encoder>
	</appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">  
    <file>logs/ipplat-henan.log</file>  
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
      <fileNamePattern>logs/ipplat-henan.%d{yyyy-MM-dd}.log.zip</fileNamePattern>  
    </rollingPolicy>  
    <layout class="ch.qos.logback.classic.PatternLayout">  
      <pattern>%-20(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{80} - %msg%n</pattern>  
    </layout>  
  </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE" />  
    </root>
    <logger name="io.github.dantesun" level="TRACE"></logger>
</configuration>